<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Theme -->
    <style name="Base.Theme.TrueVaultHelper" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryVariant">@color/cyan_dark</item>
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green_dark</item>
        <item name="android:colorBackground">@color/dark_bg</item>
        <item name="colorSurface">@color/dark_card</item>
        <item name="colorOnPrimary">@color/dark_bg</item>
        <item name="colorOnSecondary">@color/dark_bg</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/dark_bg</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/dark_bg</item>
    </style>

    <!-- Main Theme -->
    <style name="Theme.TrueVaultHelper" parent="Base.Theme.TrueVaultHelper" />
    
    <!-- Splash Theme (for launcher) -->
    <style name="Theme.TrueVaultHelper.Splash" parent="Theme.TrueVaultHelper">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
    
    <!-- Card Style -->
    <style name="CardView.TrueVault" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/dark_card</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">20dp</item>
    </style>
    
    <!-- Button Style -->
    <style name="Button.TrueVault" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/button_gradient</item>
        <item name="android:textColor">@color/dark_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextAppearance.TrueVault.Title" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.TrueVault.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/gray_light</item>
    </style>
</resources>
