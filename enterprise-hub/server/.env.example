# ============================================================================
# TrueVault Enterprise Business Hub - Server Configuration
# Copy this file to .env and fill in your values
# ============================================================================

# Server
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# JWT Secret (generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Database paths (relative to server root)
DB_COMPANY=./data/company.db
DB_HR=./data/hr.db
DB_DATAFORGE=./data/dataforge.db
DB_AUDIT=./data/audit.db

# VPN Configuration
VPN_SERVER_ENDPOINT=vpn.yourcompany.com:51820
VPN_SERVER_PUBLIC_KEY=your-wireguard-server-public-key
VPN_NETWORK_CIDR=10.0.0.0/24

# Email Configuration (optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@example.com

# SSO - Google (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/sso/google/callback

# SSO - Microsoft (optional)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_CALLBACK_URL=http://localhost:3000/api/auth/sso/microsoft/callback

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=info
